<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_moon"
    android:layout_width="160dip"
    android:layout_height="200dip"
    android:background="@drawable/appwidgetmoon_background"
    android:clickable="true"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/litTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5.0dip"
        android:text="%99.5"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/moonRiseTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:paddingLeft="15dip"
        android:text="8:45"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageMoonWidget"
            android:layout_width="fill_parent"
            android:layout_height="114dp"
            android:padding="18.0dip" />

        <TextView
            android:id="@+id/ageTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17.5d"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <TextView
        android:id="@+id/moonSetTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:paddingRight="10dp"
        android:text="21:45"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</FrameLayout>